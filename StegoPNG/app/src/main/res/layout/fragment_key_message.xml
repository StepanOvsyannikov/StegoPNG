<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FragmentKeyMessage">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editText_for_key"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_for_message"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="197dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <at.markushi.ui.CircleButton
        android:id="@+id/Circlebutton_key"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/ic_key_white_24dp"
        app:cb_color="#18b915"
        app:cb_pressedRingWidth="16dp" />

    <at.markushi.ui.CircleButton
        android:id="@+id/Circlebutton_message"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="181dp"
        android:src="@drawable/ic_check_white_24dp"
        app:cb_color="#6325bf"
        app:cb_pressedRingWidth="16dp" />

    <TextView
        android:id="@+id/textView_for_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_for_key" />

    <TextView
        android:id="@+id/textView_for_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_for_message" />

</RelativeLayout>